#!/usr/bin/env bash
# Bash script that gives you information about the school file (command line argument)


if [ -e "$1" ]
then
    echo "school file exists"
    if [ -s "$1" ]
    then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi

    if [ -f "$1" ]
    then
        echo "school is a regular file"
    fi
else
    echo "school file does not exist"
fi